@model List<FoodyTekmerEntityLayer.Concrete.Product>
@{
    Layout = "~/Views/Shared/_Admin.cshtml";
}



<div class="container">
    <br />
    <h3 class="text-center">Ürün Listesi</h3>
    <br />
    <table class="table tableborder-1">
        <tr>
            <th>#</th>
            <th>Ürün adı</th>
            <th>Eski Fiyatı</th>
            <th>Yeni Fiyatı</th>
            <th>Durum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductID</td>
                <td>@item.ProductName</td>
                <td>@item.ProductOldPrice</td>
                <td>@item.ProductNewPrice</td>
                <td>@if (item.ProductStatus == true)
                    {
                        <button class="btn btn-sm btn-info"><span class=""> Aktif </span></button>
                    }
                    else
                    {
                        <button class="btn btn-sm btn-dark">
                            <span class="text-white"> Pasif </span></button>
                    }</td>
                <td><a href="/Product/DeleteProduct/@item.ProductID" class="btn btn-danger">Sil</a></td>
                <td><a href="/Product/UpdateProduct/@item.ProductID" class="btn btn-warning">Güncelle</a></td>
                
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct/" class="btn btn-outline-success">Yeni Ürün Girişi Yapın</a>
</div>